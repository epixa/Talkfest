{% extends 'EpixaTalkfestBundle::layout.html.twig' %}

{% block bodyClass %}{{ parent() }} split{% endblock %}

{% block content %}
    <section id="add_post" class="form">
        <h2>Add Post to {{ category.getName() }}</h2>

        <form action="{{ path('add_post', {'categoryId' : category.getId()}) }}" method="post" {{ form_enctype(form) }}>
            <fieldset>
                {{ form_widget(form) }}
            </fieldset>

            <fieldset class="options">
                <input type="submit" value="Add" /> or <a href="{{ path('view_category', {'id': category.getId()}) }}">cancel</a>
            </fieldset>
        </form>
    </section>
{% endblock %}
{% extends 'EpixaTalkfestBundle::layout.html.twig' %}

{% block bodyClass %}{{ parent() }} split{% endblock %}

{% block content %}
    <section id="add_category" class="form">
        <h2>Add Category</h2>

        <form action="{{ path('add_category') }}" method="post" {{ form_enctype(form) }}>
            <fieldset>
                {{ form_widget(form) }}
            </fieldset>

            <fieldset class="options">
                <input type="submit" value="Add" /> or
                {% if cancel %}
                <a href="{{ cancel }}">cancel</a>
                {% else %}
                <a href="{{ path('post_index') }}">cancel</a>
                {% endif %}
            </fieldset>
        </form>
    </section>
{% endblock %}